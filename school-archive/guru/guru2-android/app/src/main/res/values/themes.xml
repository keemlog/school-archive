<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Body1">
        <!-- 메뉴 글자 색상을 green으로 지정 -->
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item> <!-- 볼드 지정 -->
    </style>

    <style name="Base.Theme.Singsingbogam" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 타이틀바(앱이름)색상 -->
        <item name="colorPrimary">@color/green</item>

        <!-- 메뉴 글씨 색상 및 스타일 변경-->
        <item name="android:itemBackground">@color/white</item>
        <item name="android:itemTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.CommunityEx3" parent="Base.Theme.Singsingbogam" />
</resources>